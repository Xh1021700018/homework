<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisActivity" >

    <TextView
        android:id="@+id/text_regis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="欢迎加入疯狂购物行列"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_regis_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_regis_title"
        android:layout_marginTop="28dp"
        android:text="用户名" />

    <EditText
        android:id="@+id/edit_regis_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_regis_username"
        android:layout_alignBottom="@+id/text_regis_username"
        android:layout_alignParentRight="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_regis_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_regis_username"
        android:layout_marginTop="36dp"
        android:text="密码" />

    <EditText
        android:id="@+id/edit_regis_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_regis_password"
        android:layout_alignBottom="@+id/text_regis_password"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/text_regis_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_regis_password"
        android:layout_marginTop="49dp"
        android:text="邮箱" />

    <EditText
        android:id="@+id/edit_regis_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_regis_email"
        android:layout_alignBottom="@+id/text_regis_email"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/text_regis_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_regis_email"
        android:layout_marginTop="49dp"
        android:text="手机" />

    <EditText
        android:id="@+id/edit_regis_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_regis_phone"
        android:layout_alignBottom="@+id/text_regis_phone"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_regis_phone"
        android:layout_marginTop="30dp"
        android:text="注册" />

</RelativeLayout>