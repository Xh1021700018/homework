<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_item"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_item"
        android:layout_alignRight="@+id/text_item_name"
        android:layout_below="@+id/text_item_name"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_item_price"
        android:layout_alignBottom="@+id/text_item_price"
        android:layout_alignParentRight="true"
        android:text="添加购物车" />

</RelativeLayout>